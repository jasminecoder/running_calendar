<%# Skeleton loading card - displays while race cards are loading %>

<div class="bg-white rounded-lg overflow-hidden shadow-sm">
  <%# Skeleton image placeholder (16:9 aspect ratio) %>
  <div class="aspect-video bg-gray-200 animate-pulse"></div>

  <%# Skeleton content %>
  <div class="p-4">
    <%# Title skeleton %>
    <div class="h-6 bg-gray-200 rounded animate-pulse mb-3 w-3/4"></div>

    <%# Separator %>
    <hr class="border-t border-gray-200 mb-3">

    <%# Date skeleton %>
    <div class="flex items-center mb-2">
      <div class="h-5 w-5 bg-gray-200 rounded animate-pulse mr-2"></div>
      <div class="h-4 bg-gray-200 rounded animate-pulse w-48"></div>
    </div>

    <%# Location skeleton %>
    <div class="flex items-center mb-2">
      <div class="h-5 w-5 bg-gray-200 rounded animate-pulse mr-2"></div>
      <div class="h-4 bg-gray-200 rounded animate-pulse w-40"></div>
    </div>

    <%# Cost skeleton %>
    <div class="h-4 bg-gray-200 rounded animate-pulse w-20 mb-3"></div>

    <%# Distance badges skeleton %>
    <div class="flex gap-2 mb-2">
      <div class="h-6 w-12 bg-gray-200 rounded-md animate-pulse"></div>
      <div class="h-6 w-12 bg-gray-200 rounded-md animate-pulse"></div>
    </div>

    <%# City badge skeleton %>
    <div class="h-6 w-20 bg-gray-200 rounded-md animate-pulse mt-2"></div>
  </div>
</div>
