<%# Empty state partial - displayed when no races are available %>

<div data-testid="empty-state" class="flex flex-col items-center justify-center py-20 px-4">
  <div class="text-center max-w-md">
    <%# Empty state icon %>
    <div class="mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-white/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>

    <%# Empty state message %>
    <p class="text-white text-xl font-medium mb-2">
      No hay carreras próximas.
    </p>
    <p class="text-white/80 text-lg">
      ¡Vuelve pronto!
    </p>
  </div>
</div>
